<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base">
		<item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
	</style>

	<style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">#08948c</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">#FFFFFF</item>
		<!--body background-->
		<item name="android:windowBackground">#FFFFFF</item>
		<!--selected day-->
		<item name="android:colorControlActivated">#08948c</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">#000</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">#000</item>
		<!--cancel&ok-->
		<item name="android:textColor">#08948c</item>
	</style>
</resources>